extends layout

block content
  h1 Produtos 
  table(class='table')
    thead
      tr 
        th(scope='col') ID
        th(scope='col') Nome
        th(scope='col') Descrição 
        th(scope='col') Preço 
        th(scope='col') Data de Atualização
        th(scope='col') Ações
    tbody 
      each produto in dados 
        tr 
          td #{produto.id}
          td #{produto.nome}
          td #{produto.descricao}
          td #{produto.preco}
          td #{produto.data_atualizado}
          td 
            form(action=`/produtos/delete/${produto.id}` method="POST") 
              div(class='d-flex gap-3')
                button(class='btn btn-danger' type='submit') Delete
                a(href=`/produtos/update/${produto.id}` class="btn btn-primary" tabindex="-1" role="button") Editar
  div(class="d-flex justify-content-end")
          a(href="/produtos/criar" class="btn btn-success" tabindex="-1" role="button") Adicionar
    
